@page
@model PersonalManager.Pages.Services.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Service</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Service.URL" class="control-label"></label>
                <input asp-for="Service.URL" class="form-control" id="ServiceURL" />
                <span asp-validation-for="Service.URL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Title" class="control-label"></label>
                <input asp-for="Service.Title" class="form-control" id="ServiceTitle"/>
                <span asp-validation-for="Service.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Service.Description" class="control-label"></label>
                <input asp-for="Service.Description" class="form-control" id="ServiceDescription"/>
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
        $('#ServiceURL').on('change',function(e){

            var url = '@Url.Content("~/MetaData/byURL/")' + encodeURIComponent(e.target.value);

            $.get(url,function(data){
              if(data.title){
                $('#ServiceTitle').val(data.title);
              }

              if(data.description){
                $('#ServiceDescription').val(data.description);
              }
            });
        });
</script>
}
